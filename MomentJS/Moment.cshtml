@using Demo.Helpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Moment</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.0/moment-timezone-with-data.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>
        $(function () {
            var format = 'D MMM YYYY, h:mm:ss A';
            var localNow = moment();
            var serverNow = moment.unix(@DateTime.UtcNow.GetUnixTimestamp());
            $('#localNow').html(localNow.format(format));
            $('#serverNow').html(serverNow.format(format));
            $('#localNowLA').html(localNow.tz("America/Los_Angeles").format(format));
            $('#serverNowLA').html(serverNow.tz("America/Los_Angeles").format(format));
		});
    </script>
</head>
<body>
    <div>
        Local Now: <span id="localNow"></span>
    </div>
    <div>
        Server Now: <span id="serverNow"></span>
    </div>
    <div>
        Local Now (LA): <span id="localNowLA"></span>
    </div>
    <div>
        Server Now (LA): <span id="serverNowLA"></span>
    </div>
</body>
</html>
