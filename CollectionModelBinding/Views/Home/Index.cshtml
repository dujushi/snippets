@model IEnumerable<ModelBinding.Models.Chore>

<div>
    @if (Model.Any())
    {
        <ul class="list-unstyled">
            @foreach (var chore in Model)
            {
                <li><i class='glyphicon @(chore.Status ? "glyphicon-check" : "glyphicon-unchecked")'></i>@chore.Name</li>
            }
        </ul>
    }
    else
    {
        @("No items found.")
    }
</div>

<form class="form-horizontal">
    <button class="btn btn-primary ux-new-chore-button">New Chore</button>
    <button type="submit" class="btn btn-default disabled ux-submit-new-chores">Submit</button>
</form>

<div class="ux-new-chore-template hidden">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" />
    </div>

    <div class="checkbox">
        <label>
            <input type="checkbox" name="status" value="1"> Complete
        </label>
    </div>

    <hr />
</div>